#
# Ontology Level Tests for Archivo
#
#
    
<#archivo-display-correctly>
    a sh:NodeShape ;
    sh:targetClass owl:Ontology;
    sh:property <#comment-violation> ;
    sh:property <#preflabel-warning> ;
    sh:or (
		[
			a sh:PropertyShape ;
			sh:severity sh:Violation;
			sh:path dc:title;
			sh:nodeKind sh:Literal;
			sh:minCount 1;
			sh:message "dc:title is missing or no Literal"@en;
			sh:name "dc:title not correctly specified"@en ;
		]
		[
			a sh:PropertyShape;
			sh:severity sh:Violation;
			sh:path rdfs:label;
			sh:nodeKind sh:Literal;
			sh:minCount 1 ;
			sh:name "label not correctly specified"@en;
			sh:message "rdfs:label is missing or is no Literal"@en ;
		]
	) .



<#comment-violation>
    a sh:PropertyShape ;
    sh:severity sh:Violation;
    sh:path rdfs:comment;
    sh:nodeKind sh:Literal;
    sh:minCount 1;
    sh:name "comment not correctly specified"@en;
    sh:message "rdfs:comment is missing or is no Literal"@en .

<#skosPrefLabel-warning>
# NOT implemented yet
    a sh:PropertyShape ;
    sh:severity sh:Warning;
    sh:path skos:prefLabel;
    sh:nodeKind sh:Literal;
    sh:minCount 1;
    sh:name "skos:prefLabel recommendation, i.e. if several labels/titles are given skos:prefLabel will be choosen."@en;
    sh:message "skos:prefLabel is missing or is no Literal"@en .

