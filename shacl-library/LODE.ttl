<#LODE-class-isDefinedBy-warning>
    a sh:Shape ;
    # TODO check whether this works and whether stuff is missing
    sh:targetClass owl:Class, owl:ObjectProperty, owl:DatatypeProperty;
    sh:path rdfs:isDefinedBy ;
    sh:nodeKind sh:IRI;
    sh:minCount 1;
    sh:severity sh:Warning;
    sh:name "isDefinedBy not correctly specified"@en ;
    sh:message "isDefinedBy is missing or is no IRI" .

# TODO this does nothing right now, we should add some constraints
<#LODE-ontology-warning>
    a sh:NodeShape ;
    sh:targetClass owl:Ontology;
    sh:severity sh:Warning;
    sh:property [
        sh:path owl:versionInfo;
        sh:severity sh:Warning;
        sh:message "version info is missing and will not be displayed"@en;
    ];
    sh:property [
        sh:path dc:creator;
        sh:severity sh:Warning;
        sh:message "info about the creator is missing and will not be displayed"@en;
    ];
    sh:property [
        sh:path dc:contributor;
        sh:severity sh:Warning;
        sh:message "no contributors listed"@en;
    ] ;
    sh:property [
        sh:path owl:imports;
        sh:severity sh:Warning;
        sh:message "no info given about the imports of the ontology"@en;
    ] ;
    sh:property [
        sh:path dc:description;
        sh:severity sh:Warning;
        sh:message "no dct:description given and will not be displayed"@en;
    ] ;
    sh:property [
        sh:path dc:rigths;
        sh:severity sh:Warning;
        sh:message "no info about rigths given and will not be displayed"@en;
    ] ;
    sh:property [
        sh:path owl:backwardCompatibleWith;
        sh:severity sh:Warning;
        sh:message "no information about backwards compatibility given, will not be displayed"@en;
    ] .
